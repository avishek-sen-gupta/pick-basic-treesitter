{
  "name": "pickbasic-lsp-client",
  "displayName": "Pick BASIC",
  "description": "Language support for Pick BASIC (UniVerse BASIC) via LSP",
  "version": "0.0.1",
  "publisher": "pickbasic",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["Programming Languages"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "pickbasic",
        "aliases": ["Pick BASIC", "PickBASIC", "UniVerse BASIC"],
        "extensions": [".bp", ".b", ".bas", ".basic"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pickbasic",
        "scopeName": "source.pickbasic",
        "path": "./syntaxes/pickbasic.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Pick BASIC",
      "properties": {
        "pickbasic.server.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to the Python interpreter used to run the LSP server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.5.0"
  }
}
